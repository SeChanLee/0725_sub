<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#489CFF">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:background="@drawable/total_line"
        android:layout_alignParentTop="true"
        android:id="@+id/total_line"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="역 이름을 입력하시오"
        android:layout_below="@+id/total_line"
        android:id="@+id/input_t"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="검 색"
        android:id="@+id/serch_t"
        android:layout_below="@+id/input_t"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>